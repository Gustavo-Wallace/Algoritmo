	if(op=='+'){
		result=num1+num2;
		printf("Resultado: %f",result);
	}else if(op=='-'){
		result=num1-num2;
		printf("Resultado: %f",result);
	}else if(op=='*'){
		result=num1*num2;
		printf("Resultado: %f",result);
	}else if(op=='/'){
		result=num1/num2;
		printf("Resultado: %f",result);
	}else
		printf("Operador invalido");
	
	
